{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["src/config.ts", "example/src/", "src/manifests/*.ts"]
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	},
	"files": {
		"ignore": ["dist/", "example/src/"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentWidth": 4
		}
	}
}
